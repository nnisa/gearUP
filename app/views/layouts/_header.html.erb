<header class="navbar navbar-fixed-top">
  <div class="container">
    <%= link_to image_tag('logo.png'), root_path, id: "header-logo" %>
    <nav>
      <ul class="nav">
        <li><%= link_to "About", about_page_path %></li>
        <% if Sport.all.length > 1 %>
          <li><%= link_to "Scoreboard", sports_path %></li>
        <% else %>
          <li><%= link_to "Scoreboard", { :controller => 'sports', :action => 'new' } %></li>
        <% end %>
        <% if signed_in? %>
          <li id="fat-menu" class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Sign out", signout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li id="signin"><%= link_to "Sign in", signin_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>